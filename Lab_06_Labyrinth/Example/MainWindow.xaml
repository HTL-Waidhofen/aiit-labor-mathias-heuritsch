<Window x:Class="Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600"
        KeyDown="Window_KeyDown">
    <StackPanel Orientation="Horizontal">
        <Button Content="Button1" Margin="10"/>
        <Button Content="Button2" Margin="10"/>
        <StackPanel>
            <Button Content="Button1" Margin="10"/>
            <Button Content="Button2" Margin="10"/>
            <Button Content="Button3" Margin="10"/>
        </StackPanel>
        <Canvas Background="Blue" Width="400" Height="400" x:Name="Spielfeld">

            <Canvas   Canvas.Top="50" Canvas.Left="50" Background="green" Width="50" Height="50"/>
            <Canvas Canvas.Top="100" Canvas.Left="50" Background="green" Width="50" Height="50"/>
            <Canvas Canvas.Top="50" Canvas.Left="100" Background="green" Width="50" Height="50"/>

        </Canvas> 
        

    </StackPanel>
</Window>
